{
  "name": "extract-comments-es",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@10.20.0",
  "description": "Extract comments from JS, JSX via js-tokens",
  "keywords": [
    "extract-comments-es",
    "hashbang-comments",
    "js-tokens",
    "multiline-comments",
    "singleline-comments"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/extract-comments-es#readme",
  "repository": "ntnyq/extract-comments-es",
  "bugs": {
    "url": "https://github.com/ntnyq/extract-comments-es/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch src",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version",
    "release:check": "run-s lint typecheck test",
    "release:version": "bumpp",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "js-tokens": "^9.0.1"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^5.7.0",
    "@ntnyq/prettier-config": "^3.0.1",
    "@types/node": "^24.10.0",
    "bumpp": "^10.3.1",
    "eslint": "^9.39.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,yml,yaml,json}": "eslint --fix"
  }
}
